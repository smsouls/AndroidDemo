<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn"
            android:background="#94a78f"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="点击按钮"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/btn_1"
            android:background="#94a78f"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="跳到buttonView"
            android:textSize="25sp"
            android:layout_marginTop="20dp"/>


        <Button
            android:id="@+id/btn_2"
            android:background="#94a78f"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="EditTextView"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"/>


        <Button
            android:id="@+id/btn_3"
            android:background="#94a78f"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="RadioButton"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"/>


        <Button
            android:id="@+id/btn_4"
            android:background="#94a78f"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="CheckBox"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"/>


        <Button
            android:id="@+id/btn_5"
            android:background="#94a78f"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ImageView"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btn_6"
            android:background="#94a78f"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ListView"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btn_7"
            android:background="#94a78f"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="GridView"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btn_8"
            android:background="#94a78f"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="RecylerView"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btn_9"
            android:background="#94a78f"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="GoWebView"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btn_10"
            android:background="#94a78f"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ToastActivity"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btn_11"
            android:background="#94a78f"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="DialogActivity"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btn_12"
            android:background="#94a78f"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ProgressActivity"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"/>


        <Button
            android:id="@+id/btn_13"
            android:background="#94a78f"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="CustomDialogActivity"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"/>


        <Button
            android:id="@+id/btn_14"
            android:background="#94a78f"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="PopupWindowActivity"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
    

</ScrollView>
